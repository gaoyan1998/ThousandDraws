<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/preview_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            app:srcCompat="@color/chartreuse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shadow_preview_bg"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/preview_rename"
            android:layout_width="@dimen/preview_iconsize"
            android:layout_height="@dimen/preview_iconsize"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/icon_rename" />

        <ImageView
            android:id="@+id/preview_save"
            android:layout_width="@dimen/preview_iconsize"
            android:layout_height="@dimen/preview_iconsize"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/icon_save" />

        <ImageView
            android:id="@+id/preview_editor"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/icon_editor" />

        <ImageView
            android:id="@+id/preview_delete"
            android:layout_width="@dimen/preview_iconsize"
            android:layout_height="@dimen/preview_iconsize"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/icon_delete" />

        <ImageView
            android:id="@+id/preview_share"
            android:layout_width="@dimen/preview_iconsize"
            android:layout_height="@dimen/preview_iconsize"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/icon_share" />
    </LinearLayout>
</LinearLayout>